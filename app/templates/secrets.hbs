<div class="secrets-list">
  <div class="left-column">
    <h2>Login list</h2>
    <div class="actions">
      {{#link-to 'secrets.new'}}
        <i class="fa fa-plus-circle"></i>
        Create login
      {{/link-to}}
    </div>
    <ul>
    {{#each model.data.keys as |secret_key|}}
      {{#if secret_key}}
      <li>
        {{#link-to 'secrets.show' secret_key}}{{secret_key}}{{/link-to}}
        <a class="delete-link" {{action 'deleteSecret' secret_key}}>
          <i class="fa fa-minus-circle"></i>
          Delete
        </a>
      </li>
      {{/if}}
    {{else}}
      <li><h2>No logins</h2></li>
    {{/each}}
    </ul>
  </div>
  <div class="right-column">
    {{outlet}}
  </div>
</div>
